<div class="col-lg-12">
	<div class="card rounded-0 mt-5 mb-5">
		<div class="card-body">
			<h2 class="text-center">Document Details</h2>
			<div class="row">
				<div class="col-lg-6">
					<% if @document.image.attached?%>
						<%= image_tag @document.image%>
					<%end%>	
					<h3 class="text-center">Address Information</h3>
					<p class="lead"><strong>Name: </strong><%= @document.name %></p>
					<p class="lead"><strong>Type: </strong><%= @document.doc_type %></p>
					<p class="lead"><strong>Employee ID: </strong><%= @document.employee.name %></p>
				</div>
			</div>
			<%= link_to 'Back to Documents', documents_path, class: 'btn btn-outline-primary btn-lg rounded-0' %>
			<%= link_to 'Edit Documents', edit_document_path(@document), class: 'btn btn-primary btn-lg rounded-0' %>
		</div>
	</div>
</div>